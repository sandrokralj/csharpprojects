<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="service.CCalculator">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8000/calculatorservice"/>
          </baseAddresses>
        </host>
      <!-- Service Endpoints -->
      <!-- This endpoint is exposed at the base address provided by the host -->
      <endpoint address="" binding="wsHttpBinding" contract="service.ICalculator"/>
      
      <!-- Metadata Endpoints -->
      <!-- The metadata exchange is used by the service to describe itself to clients. -->
      <!-- the mex endpoint is exposed at http://localhost:8000/calculatorservice/mex -->
      <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>